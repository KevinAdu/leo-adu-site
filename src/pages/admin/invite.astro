---
import adminInviteScript from "../../scripts/admin-invite.ts?url";

const title = "Invite users";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <h1>{title}</h1>
      <p>
        <a href="/admin/requests">View access requests</a>
      </p>
      <form
        id="invite-form"
        data-success="Invite sent."
        data-failed="Invite failed."
      >
        <label>
          Email
          <input type="email" name="email" autocomplete="email" required />
        </label>
        <button type="submit">Send invite</button>
      </form>
      <p id="invite-error" role="alert"></p>
      <p id="invite-success" role="status"></p>
    </main>

    <script type="module" src={adminInviteScript}></script>
  </body>
</html>
